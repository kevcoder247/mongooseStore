<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Document</title>
</head>
<body>
  
  <a href="/mongoose/new" class="all-products-link">Add New Product</a>
  
  <h1>All Products</h1>

  <div id="container">

    <ul>
      <% products.forEach(product => { %>
          <li>
            <a href="/mongoose/<%=product._id%>">
              <h4 class="product-name"><%= product.name %></h4>
              <img src="<%= product.img %>" alt="">
              <h4 class="product-name">$<%= product.price %></h4>
              

              <!-- <form action="/mongoose/<%=product._id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
              </form> -->
            </a>
          </li>
        <% })%>
    </ul>

  </div>


</body>
</html>