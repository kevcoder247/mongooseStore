<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <title>Document</title>
</head>
<body>
  <a href="/mongoose/new">Add New Product</a>
  <h1>All Products</h1>

 <ul>
  <% products.forEach(product => { %>
        <li>
          <a href="/mongoose/<%=product._id%>">
            <%= product.name %>

            <form action="/mongoose/<%=product._id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE">
            </form>
          </a>
        </li>
      <% })%>
  </ul>

</body>
</html>